<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:UserControls="clr-namespace:DallEX.io.View.UserControls" x:Class="DallEX.io.View.MainWindow"
        Title="DallEX.io 3.1" Height="620" Width="720" Background="#000000" Closed="Window_Closed">


    <Grid Margin="0,0,0,0" TextElement.Foreground="#ffffff">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TabControl HorizontalAlignment="Stretch" VerticalAlignment="Stretch" x:Name="TabMain" Background="Black" TextElement.Foreground="#ffffff" Grid.Row="1" SelectionChanged="TabMain_SelectionChanged"/>
        <UserControls:ucTopDisplay x:Name="ucHeader" Grid.Row="0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />
    </Grid>
</Window>
