<Window x:Class="Jojatekok.PoloniexAPI.Demo.AccountWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Account" Height="593" Width="653">
    <Grid>
        <DataGrid x:Name="dtgAccount" IsReadOnly="True" HeadersVisibility="Column" ColumnWidth="80" AutoGenerateColumns="False" Grid.Column="0" Foreground="#333333" 
    		Loaded="dtgAccount_Loaded"
                      Margin="0,30,0,0"
                      >
            <DataGrid.Columns>
                <DataGridTextColumn x:Name="id" Header="Market" Binding="{Binding Key}" CanUserResize="False"/>
                <DataGridTextColumn x:Name="btcValue" Header="BTC Value" Binding="{Binding Value.btcValue, StringFormat=\{0:0.00000000\}}" Width="*"/>
                <DataGridTextColumn x:Name="available" Header="QuoteAvailable" Binding="{Binding Value.available, StringFormat=\{0:0.00000000\}}" Width="*"/>
                <DataGridTextColumn x:Uid="QuoteAvailable" x:Name="onOrders" Header="OnOrders" Binding="{Binding Value.onOrders, StringFormat=\{0:0.00000000\}}" Width="*" SortDirection="Descending"/>                
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
